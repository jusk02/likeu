				      <% end %>
				      </ul>
				    </div>
				  <% end %>

				   <%= f.hidden_field :location_id %>

			      <div class="field">
			      
			        <%= f.text_area :message, :class => 'form-control user-area' %>
			      </div>
			      <br>
			      <div class="actions">
			        <%= f.submit 'Crear', :class => 'btn btn-success' %>
			      </div>
			     
			<% end %>
				
        	</div>
    	</div>
	</div>
</section>

