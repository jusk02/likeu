
<% if current_user.role == 3 %>

<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>&#160;
      <th>Name</th>&#160;
      <th>Email</th>&#160;
      <th>Age</th>&#160;
      <th>Gender</th>&#160;
      <th>City</th>&#160;
      <th>Cellphone</th>&#160;
      <th colspan="3"></th>&#160;
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>&#160;
        <td><%= user.name %></td>&#160;
        <td><%= user.email %></td>&#160;
        <td><%= user.age %></td>&#160;
        <td><%= user.gender %></td>&#160;
        <td><%= user.city %></td>&#160;
        <td><%= user.cellphone %></td>&#160;

        <td><%= link_to 'Mostrar', user ,class: "gris"%></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: "gris" %></td>
        <td><%= link_to 'Destruir', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "gris" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

      
      <% end %> 





