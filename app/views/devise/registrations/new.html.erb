<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :cellphone %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.text_field :cellphone, autocomplete: "off" %>
    <%= f.hidden_field :password, :value => "cellphone"%>
  </div>

  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>